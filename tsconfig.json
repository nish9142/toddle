{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "lib": ["es6"],
    "allowJs": true,
    "outDir": "build",
    "rootDir": "src",
    "strict": false,
    "esModuleInterop": true,
    "types": ["node", "jest"],
    "skipLibCheck": true,
    "sourceMap": true,
    "noEmitOnError": true,
    "allowSyntheticDefaultImports": true,
    "allowUnreachableCode": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata":true,
    "resolveJsonModule": true,
  },
  "include": ["src/**/*"],
  "exclude": ["src/**/*.spec.ts"]
}
